pipeline{
    agent{
        label "node"
    }
    stages{
        stage("A"){
            steps{
                echo 'I am rabin'
            }
            post{
                always{
                    sh 'pwd'
                }
                success{
                    echo "========A executed successfully========"
                }
                failure{
                    echo "========A execution failed========"
                }
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
